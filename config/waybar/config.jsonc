  "hyprland/window": {
    "format": "{}"
  },
  "wlr/workspaces": {
    "min-length": 6,
    "disable-scroll": false,
    "all-outputs": false,
    "active-only": false,
    "on-click": "activate",
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "ï‰©",
      "2": "ï„ ",
      "3": "î«¬",
      "4": "ó°†",
      "5": "îš¥",
      "6": "ï‰¨",
      "7": "ó°™",
      "8": "ï…¾",
      // "9": "ï„‘",
      "urgent": "ïª",
      "focused": "ï†’",
      "default": "ó°§¨"
    },
    "sort-by-number": true
