#!/bin/bash

# Create a new session named "fe-path", split panes and change directory in each
tmux new-session -d -s fe-path
tmux send-keys -t fe-path "cd /home/mc/marc/custom/a_source/fe-micro-container" Enter
tmux split-window -h -p 66 -t fe-path
tmux send-keys -t fe-path "cd /home/mc/marc/custom/a_source/fe-micro-standard/" Enter
tmux split-window -h -p 50 -t fe-path
tmux send-keys -t fe-path "cd /home/mc/marc/custom/a_source/fe-micro-custom/" Enter
# Attach to session named "fe-path"
tmux attach -t fe-path
